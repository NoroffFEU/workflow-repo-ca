{
	"name": "workflow-repo",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"dev": "npx tailwindcss -i ./css/input.css -o ./css/style.css --watch",
		"lint": "npx eslint",
		"pretty": "npx prettier . --write",
		"prepare": "husky install",
		"husky": "npx lint-staged",
		"test": "npx vitest",
		"test-cover": "npx vitest --coverage",
		"build": "npx tailwindcss -i ./css/input.css -o ./css/style.css && husky"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@eslint/js": "^9.16.0",
		"@vitest/browser": "^2.1.8",
		"@vitest/coverage-istanbul": "^2.1.8",
		"eslint": "^9.16.0",
		"globals": "^15.13.0",
		"husky": "^9.1.7",
		"jsdom": "^25.0.1",
		"lint-staged": "^15.2.10",
		"prettier": "^3.4.2",
		"tailwindcss": "^3.4.12",
		"vitest": "^2.1.8"
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"prettier --write"
		],
		"*.html": [
			"prettier --write"
		]
	}
}
